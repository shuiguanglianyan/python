page {
  background: #f5f7fb;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  padding: 28rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.sub-title {
  margin-top: 8rpx;
  color: #6b7280;
  font-size: 26rpx;
}

.primary-btn {
  width: 100%;
  border-radius: 14rpx;
  background: #1a73e8;
  color: #fff;
  font-size: 30rpx;
  padding: 16rpx 0;
}

.secondary-btn {
  width: 100%;
  border-radius: 14rpx;
  background: #fff;
  color: #1a73e8;
  border: 1px solid #1a73e8;
  font-size: 28rpx;
  padding: 14rpx 0;
}
